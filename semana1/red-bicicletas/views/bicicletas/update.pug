extends ../layout

block content
  a(href='/bicicletas') Back
  br
  br
  br

  h1 Update Bicycle
  br
  br
  form(action=`/bicicletas/${bici.id}/update` method='post')
    .form-group
      label(for="id") ID:
      input#id(type="text" name="id" class="form-control" value=bici.id)
    .form-group
      label(for="color") Color:
      input#id(type="text" name="color" class="form-control" value=bici.color)
    .form-group
      label(for="modelo") Modelo:
      input#id(type="text" name="modelo" class="form-control" value=bici.modelo)
    .form-group
      label(for="modelo") Ciudad:
      input#id(type="text" name="ciudad" class="form-control" value=bici.ciudad)
    .form-group
      label(for="lat") Latitud:
      input#id(type="text" name="lat" class="form-control" value=bici.ubicacion[0])
    .form-group
      label(for="lng") Longitud:
      input#id(type="text" name="lng" class="form-control" value=bici.ubicacion[1])
    br
    br
    input.btn(type='submit' value='OK')
